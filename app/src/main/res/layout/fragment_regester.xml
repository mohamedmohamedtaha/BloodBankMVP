<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".u.ui.fregmants.userCycle.RegesterFragment">
    android:text="@string/create_new_user"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_6xl"
            android:background="@android:color/white"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_new_user"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimens_xl" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout

            style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/Fragment_Name_Regester"
                style="@style/StyleEditTextNull"
                android:hint="@string/create_new_user" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/Fragment_Email_Regester"
                style="@style/StyleEditTextNull"
                android:hint="@string/email"

                />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/Fragment_Date_Regester"
            style="@style/StyleEditText"
            android:drawableEnd="@drawable/ic_calender"
            android:hint="@string/date" />


        <android.support.design.widget.TextInputLayout

            style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/Fragment_Blood_Regester"
                style="@style/StyleEditTextNull"
                android:hint="@string/blood_type"

                />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/Fragment_Last_Date_Regester"
            style="@style/StyleEditText"
            android:drawableEnd="@drawable/ic_calender"
            android:hint="@string/last_date" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/Spinner_Gaverment"
            style="@style/SpinnerForFragment"
            android:hint="@string/select_gaverment"
            app:met_floatingLabel="highlight" />


        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/Spinner_City"
            style="@style/SpinnerForFragment"
            android:hint="@string/select_city"
            app:met_floatingLabel="highlight" />

        <android.support.design.widget.TextInputLayout

            style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/Fragment_Phone_Regester"
                style="@style/StyleEditTextNull"

                android:hint="@string/phone"

                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/Fragment_Password_Regester"
                style="@style/StyleEditTextNull"

                android:hint="@string/password"

                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/Fragment_Retry_Password_Regester"
                style="@style/StyleEditTextNull"
                android:hint="@string/retry_password"

                />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/regester_bt"
            style="@style/StyleButton"
            android:background="@color/colorButtonRegester"
            android:text="@string/regester" />
    </LinearLayout>
</ScrollView>