<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_notification">

    <ImageView
        android:id="@+id/IM_Show_Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimens_m"
        android:layout_marginEnd="@dimen/dimens_m"
        android:src="@drawable/ic_notifivation" />

    <TextView
        android:id="@+id/TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_m"
        android:layout_marginEnd="@dimen/dimens_l"
        android:layout_toStartOf="@+id/IM_Show_Notification"
        android:gravity="center"
        android:text="@string/alarm" />

    <TextView
        android:id="@+id/TV_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_xl"
        android:layout_marginTop="@dimen/dimens_m" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_m"
        android:layout_marginEnd="@dimen/dimens_m"
        android:layout_toEndOf="@+id/TV_Date"
        android:src="@drawable/ic_clock" />
</RelativeLayout>