<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".u.fregmants.userCycle.ForgetPasswordStep1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            style="@style/StyleForImageView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_xxxxl"
            android:gravity="center"
            android:text="@string/forget_my_password"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_size_xl" />

        <android.support.design.widget.TextInputLayout style="@style/StyleEditText"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/Fragment_Phone_Forget_Step1"
                style="@style/StyleEditTextNull"

                android:hint="@string/phone"

                />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bt_Send_Forget_Step1"
            style="@style/StyleButton"
            android:background="@color/colorButtonLogin"
            android:text="@string/send" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/Forget_Step1_progress"
        style="@style/StyleProgressBar"


        />
</RelativeLayout>