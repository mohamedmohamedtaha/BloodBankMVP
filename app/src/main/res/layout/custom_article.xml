<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dimens_l"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/IM_Favorite"
        android:src="@drawable/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/TV_Show_Title_Article"
        android:text="@string/remind_time"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_size_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/IM_Show_Picture"
        android:src="@drawable/favorite"
        android:layout_below="@+id/TV_Show_Title_Article"
        android:layout_marginTop="@dimen/dimens_l"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_height_logo"
        />

</RelativeLayout>
</android.support.v7.widget.CardView>