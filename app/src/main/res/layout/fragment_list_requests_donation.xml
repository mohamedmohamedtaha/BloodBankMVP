<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".u.ui.fregmants.homeCycle.regusets.ListRequestsDonationFragment">
    <RelativeLayout
        android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_l"
            android:layout_marginEnd="@dimen/dimens_l"
            android:layout_marginTop="@dimen/dimens_m"
            android:background="@drawable/background_spinner"
            >
            <Spinner
                android:id="@+id/ListRequestsDonationFragment_Select_Blood_Type"
                style="@style/SpinnerForFragment"
                android:popupBackground="@android:color/white"
                android:layout_centerVertical="true"
                android:gravity="center"
                />
        </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/linear"
        android:layout_marginTop="@dimen/dimens_m"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:divider="@null"

        android:dividerHeight="0dp">

    </android.support.v7.widget.RecyclerView>
    <!-- Empty view is only visible when the list has no items. -->


    <RelativeLayout
        android:id="@+id/empty_view_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/empty_image"
        style="@style/EmptyViewImage"
        />
    <TextView
        android:id="@+id/tv_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:fontFamily="@font/cairo_regular"
        android:layout_marginTop="@dimen/dimens_xl"
        android:textSize="@dimen/txt_size_xl"
        android:layout_below="@+id/empty_image"
        android:textAppearance="?android:textAppearanceMedium" />

    </RelativeLayout>
    <!-- Loading indicator is only shown before the first load -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />

</RelativeLayout>