<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".u.ui.fregmants.homeCycle.others.SettingsNotificationFragment">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/some_text"
        android:textSize="@dimen/txt_size_xl"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView_Types_Blood"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimens_6xl"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dimens_6xl"
        android:id="@+id/RecyclerView_Types_Cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>