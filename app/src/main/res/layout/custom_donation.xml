<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
       android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IM_Type_Blood"
            android:layout_marginTop="@dimen/dimens_l"
            android:layout_marginEnd="@dimen/dimens_l"
            android:layout_width="@dimen/dimens_xxxxl"
            android:layout_height="@dimen/dimens_xxxxl"
            android:src="@drawable/ic_calender"/>
    <TableLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TableRow>

        <TextView
            android:id="@+id/name_patient"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="@string/patient_name"/>

        <TextView
            android:id="@+id/TV_Name_Patient"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dimens_m"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="@string/patient_name"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/IM_Type_Blood"
            android:layout_below="@+id/name_patient"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/hospital"/>
        android:text="@string/cityDoantionRequestCreate"/>
        <TextView
            android:id="@+id/TV_Hospital"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dimens_m"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/hospital"/>

    </TableRow>
    <TableRow>

    <TextView
            android:id="@+id/cityDoantionRequestCreate"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
        android:text="@string/cityDoantionRequestCreate"
           android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/TV_City"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginStart="@dimen/dimens_m"

            android:layout_height="wrap_content"
            android:text="@string/cityDoantionRequestCreate"/>
    </TableRow>


  </TableLayout>
    <LinearLayout
        android:layout_width="@dimen/dimens_half_hundrand"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/BT_Details"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/details"
            android:layout_marginEnd="@dimen/dimens_m"
            android:layout_marginStart="@dimen/dimens_m"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/BT_Call"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/call"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:background="@color/colorButtonLogin"
            android:layout_marginEnd="@dimen/dimens_m"
            android:layout_marginStart="@dimen/dimens_m"
            android:layout_height="0dp"/>


    </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>