<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".u.ui.fregmants.homeCycle.regusets.RequestDonationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/RequestDonationFragment_ET_Name_Patient"
                style="@style/StyleEditTextNull"
                android:hint="@string/patient_name"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/RequestDonationFragment_ET_Age_Patient"
                style="@style/StyleEditTextNull"
                android:hint="@string/age"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_l"
            android:layout_marginTop="@dimen/dimens_m"
            android:layout_marginEnd="@dimen/dimens_l"
            android:background="@drawable/background_spinner">

            <Spinner
                android:id="@+id/RequestDonationFragment_SP_Blood_Types"
                style="@style/SpinnerForFragment"
                android:layout_centerVertical="true"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_l"
            android:layout_marginTop="@dimen/dimens_m"
            android:layout_marginEnd="@dimen/dimens_l"
            android:background="@drawable/background_spinner">

            <Spinner
                android:id="@+id/RequestDonationFragment_SP_Number_Package"
                style="@style/SpinnerForFragment"
                android:layout_centerVertical="true"
                android:gravity="center" />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/RequestDonationFragment_ET_Name_Hospital_Patient"
                style="@style/StyleEditTextNull"
                android:hint="@string/hospital"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/RequestDonationFragment_TV_Adrees_Hospital"
            style="@style/StyleEditText"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_map"
            android:hint="@string/address_hospital" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_l"
            android:layout_marginTop="@dimen/dimens_m"
            android:layout_marginEnd="@dimen/dimens_l"
            android:background="@drawable/background_spinner">

            <Spinner
                android:id="@+id/RequestDonationFragment_SP_Gaverment_Request_Donation"
                style="@style/SpinnerForFragment"
                android:layout_centerVertical="true"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_l"
            android:layout_marginTop="@dimen/dimens_m"
            android:layout_marginEnd="@dimen/dimens_l"
            android:background="@drawable/background_spinner">

            <Spinner
                android:id="@+id/RequestDonationFragment_SP_City_Request_Donation"
                style="@style/SpinnerForFragment"
                android:layout_centerVertical="true"
                android:gravity="center" />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/RequestDonationFragment_ET_Phone_Patient"
                style="@style/StyleEditTextNull"
                android:hint="@string/phone"
                android:inputType="phone" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/StyleEditText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/RequestDonationFragment_ET_Notes_Patient"
                style="@style/StyleEditTextNull"
                android:hint="@string/notes"
                android:inputType="textMultiLine"
                android:lines="5" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/RequestDonationFragment_BT_Send_Request"
            style="@style/StyleButton"
            android:layout_marginBottom="30dp"
            android:background="@color/colorButtonRegester"
            android:text="@string/send_request" />
    </LinearLayout>
</ScrollView>