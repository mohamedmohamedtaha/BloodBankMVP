<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_m</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:layout_marginTop">@dimen/dimens_m</item>
        <item name="android:layout_marginStart">@dimen/dimens_l</item>
        <item name="android:layout_marginEnd">@dimen/dimens_l</item>
        <item name="android:layout_marginBottom">@dimen/dimens_l</item>

    </style>

    <style name="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:paddingEnd">@dimen/dimens_l</item>
        <item name="android:layout_marginStart">@dimen/dimens_l</item>
        <item name="android:layout_marginTop">@dimen/dimens_l</item>
        <item name="android:layout_marginEnd">@dimen/dimens_l</item>
        <item name="android:background">@drawable/shape</item>
    </style>

    <style name="StyleEditTextNull">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Customize Spinner for Fragment StokeWearehouse. -->
    <style name="SpinnerForFragment" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimens_l</item>
        <item name="android:layout_marginStart">@dimen/dimens_l</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:textColorHint">@android:color/black</item>

    </style>


    <style name="StyleProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateDrawable">@drawable/custom_prograsbar</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
           </style>
    <style name="StyleForImageViewForSplashActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@mipmap/logo</item>
          </style>
    <style name="StyleForImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_height_logo</item>
        <item name="android:layout_marginTop">@dimen/dimens_xl</item>
        <item name="android:src">@mipmap/logo</item>
    </style>


    <style name="EmptyViewImage" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/logo</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:contentDescription">@string/content_picture</item>

    </style>
    <style name="StyleTextViewForDetaislDonation" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimens_l</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/dimens_xl</item>
        <item name="android:layout_marginStart">@dimen/dimens_xl</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>


    </style>
    <style name="StyleTextViewForContectUS" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_xxl</item>
        <item name="android:layout_marginTop">@dimen/dimens_l</item>
        <item name="android:layout_marginEnd">@dimen/dimens_xl</item>
        <item name="android:layout_marginStart">@dimen/dimens_xl</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="StyleForView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_ss</item>
        <item name="android:layout_margin">@dimen/dimens_l</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginEnd">@dimen/dimens_xl</item>
        <item name="android:gravity">center</item>

    </style>

       <string name="content_picture">no_image</string>
</resources>
