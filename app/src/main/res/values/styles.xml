<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_m</item>
        <item name="android:layout_marginTop">@dimen/dimens_m</item>
        <item name="android:layout_marginStart">@dimen/dimens_l</item>
        <item name="android:layout_marginEnd">@dimen/dimens_l</item>
    </style>

    <style name="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:paddingEnd">@dimen/dimens_l</item>
        <item name="android:layout_marginStart">@dimen/dimens_l</item>
        <item name="android:layout_marginTop">@dimen/dimens_l</item>
        <item name="android:layout_marginEnd">@dimen/dimens_l</item>
        <item name="android:background">@drawable/shape</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
